+    pub fn refresh_pull_requests(&mut self, cx: &mut Context<Self>) -> anyhow::Result<()> {
+        let remote = self.get_current_remote(cx)?;
+        self.store
+            .update(cx, |store, cx| store.fetch_pull_requests(remote, cx))
+    }
