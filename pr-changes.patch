+                    this.manager.update(cx, |manager, cx| {
+                        manager.store().update(cx, |store, _cx| {
+                            store.update_pull_request(full_pr);
+                        });
+                    });
+                    cx.notify();
+                })?;
+                
+                Ok::<(), anyhow::Error>(())
+            })
+            .detach_and_log_err(cx);
+        }
+    }
