+
+#[derive(Clone, Debug)]
+pub enum PullRequestFilter {
+    All,
+    Open,
+    Closed,
+    Merged,
+    Draft,
+    ReadyForReview,
+    Author(String),
+    Assignee(String),
+    Label(String),
+}
