{
  "languages": {
    "Markdown": {
      "tab_size": 2,
    },
    "TOML": {
      "format_on_save": "off",
    },
    "YAML": {
      "tab_size": 2,
    },
    "JSON": {
      "tab_size": 2,
      "preferred_line_length": 120,
    },
    "JSONC": {
      "tab_size": 2,
      "preferred_line_length": 120,
    },
  },
  "hard_tabs": false,
  "formatter": "auto",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/target",
  ],
}
