[
    {
        "context": "Editor && VimControl",
        "bindings": {
            "i": [
                "vim::SwitchMode",
                "Insert"
            ],
            "g": [
                "vim::PushOperator",
                {
                    "Namespace": "G"
                }
            ],
            "h": "vim::Left",
            "j": "vim::Down",
            "k": "vim::Up",
            "l": "vim::Right",
            "0": "vim::StartOfLine",
            "shift-$": "vim::EndOfLine",
            "shift-G": "vim::EndOfDocument",
            "w": "vim::NextWordStart",
            "shift-W": [
                "vim::NextWordStart",
                {
                    "ignorePunctuation": true
                }
            ],
            "e": "vim::NextWordEnd",
            "shift-E": [
                "vim::NextWordEnd",
                {
                    "ignorePunctuation": true
                }
            ],
            "b": "vim::PreviousWordStart",
            "shift-B": [
                "vim::PreviousWordStart",
                {
                    "ignorePunctuation": true
                }
            ],
            "escape": [
                "vim::SwitchMode",
                "Normal"
            ]
        }
    },
    {
        "context": "Editor && vim_operator == g",
        "bindings": {
            "g": "vim::StartOfDocument"
        }
    },
    {
        "context": "Editor && vim_mode == insert",
        "bindings": {
            "escape": "vim::NormalBefore",
            "ctrl-c": "vim::NormalBefore"
        }
    },
    {
        "context": "Editor && vim_mode == normal",
        "bindings": {
            "c": [
                "vim::PushOperator",
                "Change"
            ],
            "d": [
                "vim::PushOperator",
                "Delete"
            ]
        }
    },
    {
        "context": "Editor && vim_operator == c",
        "bindings": {
            "w": [
                "vim::NextWordEnd",
                {
                    "ignorePunctuation": false
                }
            ],
            "shift-W": [
                "vim::NextWordEnd",
                {
                    "ignorePunctuation": true
                }
            ]
        }
    },
    {
        "context": "Editor && vim_operator == d",
        "bindings": {
            "w": [
                "vim::NextWordStart",
                {
                    "ignorePunctuation": false,
                    "stopAtNewline": true
                }
            ],
            "shift-W": [
                "vim::NextWordStart",
                {
                    "ignorePunctuation": true,
                    "stopAtNewline": true
                }
            ]
        }
    }
]