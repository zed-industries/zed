{
  "contexts": [
    {
      "context": "vim_mode == normal",
      "bindings": {

        "h": "cursor::move_left",
        "j": "cursor::move_down",
        "k": "cursor::move_up",
        "l": "cursor::move_right",

        "w": "cursor::move_next_word_start",
        "b": "cursor::move_prev_word_start",
        "e": "cursor::move_next_word_end",

        "0": "cursor::line_start",
        "^": "cursor::first_non_whitespace",
        "$": "cursor::line_end",

        "gg": "cursor::file_start",
        "G": "cursor::file_end",

        "i": "vim::enter_insert_mode",
        "a": [
          "cursor::move_right",
          "vim::enter_insert_mode"
        ],
        "o": "vim::open_newline_below",
        "O": "vim::open_newline_above",

        "v": "vim::enter_visual_mode",
        "V": "vim::enter_visual_line_mode",

        "x": "delete::delete_right",
        "dd": "delete::delete_line",
        "yy": "copy::copy_line",
        "p": "insert::paste_after",
        "P": "insert::paste_before",

        ".": "repeat::last_change",

        "u": "editor::undo",
        "U": "editor::redo",

        ":": "vim::enter_command_line"
      }
    }
  ]
}
