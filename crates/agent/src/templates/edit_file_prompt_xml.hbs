<example>
<edits>

<old_text line=3>
struct User {
    name: String,
    email: String,
}
</old_text>
<new_text>
struct User {
    name: String,
    email: String,
    active: bool,
}
</new_text>

<old_text line=25>
    let user = User {
        name: String::from("John"),
        email: String::from("john@example.com"),
    };
</old_text>
<new_text>
    let user = User {
        name: String::from("John"),
        email: String::from("john@example.com"),
        active: true,
    };
</new_text>

</edits>
</example>
