{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "paths": {
            "@components/*": ["./components/*"],
            "@lib/*": ["./lib/*"],
            "@theme*": ["./theme/index"],
            "@theme/*": ["./theme/*"],
            "@themes": ["./themes/index"],
            "@themes/*": ["./themes/*"],
            "@system/*": ["./theme/system/*"],
            "@ui/*": ["./ui/*"],
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
