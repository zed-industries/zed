{
    "id": "dev.zed.Zed",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.golang"
    ],
    "command": "Zed",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=session-bus",
        "--filesystem=host",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/golang/bin"
    },
    "modules": [
        {
            "name": "host-spawn",
            "buildsystem": "simple",
            "build-commands": [
                "go build",
                "install -Dm755 ./host-spawn -t /app/bin"
            ],
            "sources": [
                "host-spawn/sources.json"
            ]
        },
        {
            "name": "Zed",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/Zed/cargo"
                }
            },
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose --features flatpak",
                "install -Dm755 ./target/release/Zed -t /app/bin",
                "mkdir -p /app/share/metainfo",
                "mkdir -p /app/share/applications",
                "mkdir -p /app/share/icons/hicolor/512x512/apps",
                "cp ./assets/packaging/dev.zed.Zed.metainfo.xml /app/share/metainfo",
                "cp ./assets/packaging/dev.zed.Zed.desktop /app/share/applications",
                "cp ./crates/zed/resources/app-icon.png /app/share/icons/hicolor/512x512/apps/dev.zed.Zed.png"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../../"
                },
                "generated-sources.json"
            ]
        }
    ]
}